<style is:inline>
  .mg-wrapper {
    padding: 25px;
    border-radius: 10px;
    background: #f8f8f8;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }
  .mg-cards,
  .mg-card,
  .mg-view {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .mg-cards {
    height: 400px;
    width: 400px;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .mg-cards .mg-card {
    cursor: pointer;
    list-style: none;
    user-select: none;
    position: relative;
    perspective: 1000px;
    transform-style: preserve-3d;
    height: calc(100% / 4 - 10px);
    width: calc(100% / 4 - 10px);
  }
  .mg-card.shake {
    animation: shake 0.35s ease-in-out;
  }
  @keyframes shake {
    0%,
    100% {
      transform: translateX(0);
    }
    20% {
      transform: translateX(-13px);
    }
    40% {
      transform: translateX(13px);
    }
    60% {
      transform: translateX(-8px);
    }
    80% {
      transform: translateX(8px);
    }
  }
  .mg-card .mg-view {
    width: 100%;
    height: 100%;
    position: absolute;
    border-radius: 7px;
    background: #fff;
    pointer-events: none;
    backface-visibility: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.25s linear;
  }
  .mg-card .mg-front-view img {
    width: 19px;
  }
  .mg-card .mg-back-view img {
    max-width: 45px;
  }
  .mg-card .mg-back-view {
    transform: rotateY(-180deg);
  }
  .mg-card.flip .mg-back-view {
    transform: rotateY(0);
  }
  .mg-card.flip .mg-front-view {
    transform: rotateY(180deg);
  }

  @media screen and (max-width: 700px) {
    .mg-cards {
      height: 350px;
      width: 350px;
    }
